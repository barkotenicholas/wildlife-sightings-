{{#partial "content"}}

    <h1 class="text-center">Record Sighting</h1>

    <div class=" d-flex justify-content-center">
        <form action="/newsighting" method="post" class="was-validated">
            <div class="form-group input-group mb-3">
                <select class="custom-select" id="health" name="animal">
                    {{#each this.animal}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                    {{#each this.Eanimal}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
                <div class="input-group-append">
                    <label class="input-group-text" for="animal" >choose animal</label>
                </div>
            </div>
            <div class="form-group input-group mb-3">
                <select class="custom-select" id="location" name="location">
                    {{#each this.location}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <div class="input-group-append">
                    <label class="input-group-text" for="location" >choose location</label>
                </div>
            </div>
            <div class="form-group input-group mb-3">
                <select class="custom-select" id="ranger" name="ranger">
                    {{#each this.ranger}}
                        <option value="{{this.id}}">{{this.name}}</option>
                    {{/each}}
                </select>
                <div class="input-group-append">
                    <label class="input-group-text" for="ranger" >choose Ranger</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

{{/partial}}

{{> layout.hbs}}