{{#partial "content"}}

    <h1 class="text-center">Add new Animal</h1>

        <div class=" d-flex justify-content-center">
            <form action="/animal" method="post" class="was-validated">
                <div class="form-group col-xs-4">
                    <label for="uname">Animal Name :</label>
                    <input type="text" class="form-control" id="uname" placeholder="Enter Animal Name" name="animalName" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

{{/partial}}

{{> layout.hbs}}